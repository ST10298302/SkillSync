{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["jest", "node", "react-native"],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "context/**/*.ts",
    "context/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "test-utils.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "__tests__/**",
    "coverage/**",
    "supabase/functions/**",
    "scripts/**",
    "services/mediaService.ts",
    "app/skill/[id]-enhanced.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
